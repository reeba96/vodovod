extends layout

block content
  body#page-top(data-target='.navbar-fixed-top')
    // Navigation
    nav#menu.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
          a.navbar-brand.page-scroll(href='/samocitac/index') 
            img(src='../images/vodovod_logo.png' height='27px' style='margin-top: -2px;')
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a.active(href='/samocitac/index') Računi i plaćanja
            li
              .dropdown
                img.avatarIcon(src='../images/icons/avatar_1.jpg')
                .dropdown-content
                  a(href='#' style="pointer-events: none;") #{naziv}
                  a(href='/odjava') Odjava
    .container(style='margin-top: 7em;')
      .section-title
        h2 #{sifra} - #{naziv}
      table.table.table-hover
        != messages('message', locals)
        thead.tableheader
            tr
              th Račun
              th Datum
              th Valuta
              th Opis
              th Stanje Vodomera
              th Duguje
              th Potražuje
              th 
            tbody
              for val in nalstas
                tr
                  td #{val.racun}
                  td #{val.datum}
                  td #{val.valuta}
                  td #{val.opis}
                  td #{val.sada}
                  td #{val.duguje}
                  if val.potrazuje > 0
                    td(style='background-color: #F2DEDE;') #{val.potrazuje}
                  else
                    td(style='background-color: #DFF0D8;') #{val.potrazuje}
                  td(align='center')
                    if val.vrsta == "D"
                      a(href='/samocitac/index/print/'+'#{val.id}', data-toggle='tooltip', title='Pogledaj PDF' target='_blank')
                        img(src='../images/icons/print.jpg' height='15px')
      br
      form.form-inline(method='post', action='/samocitac/index')
        .form-group
          font(size='3', color='black') Stanje vodomera: 
          input.form-control(type='Number', name='stanje', maxlength="10", required='', oninvalid="this.setCustomValidity('Molim Vas, unesite stanje!')", oninput="setCustomValidity('')") 
        button.btn.btn-primary(type='submit') Pošalji
      br