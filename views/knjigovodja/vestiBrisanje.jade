extends layout

block content
  body#page-top(data-target='.navbar-fixed-top')
    // Navigation
    nav#menu.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand.page-scroll(href='/knjigovodja/index', , data-toggle='tooltip', title='Home') 
            img(src='../images/vodovod_logo.png' height='27px' style='margin-top: -2px;')
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/knjigovodja/dokumenti') Dokumenti
            .dropdown
              li.dropli.active(onclick='myFunction()') Vesti
                #myDropdown.dropdown-content
                  a(href='/knjigovodja/vesti') Objava
                  a.active(href='/knjigovodja/vestiBrisanje') Sakrivanje i brisanje   
            li
              a(href='/knjigovodja/index') Blagajna
            li#dropmenu.dropdown
                img.avatarIcon(src='../images/icons/avatar_1.jpg')
                .dropdown-content
                  a(href='#' style="pointer-events: none;") #{naziv}
                  a(href='/odjava') Odjava
    .container(style='margin-top: 8em; margin-bottom: 4em;')
      .section-title(style='margin-top: 2em;')
        h2 
          img.avatarIcon(src='../images/icons/note.png' style='height: 40px; padding-bottom: 12px;')
          |  Sakrivanje i brisanje vesti 
          img.infoIcon(src='../images/icons/info.png' title='Za sakrivanje ili ponovnu vidljivost vesti kliknite na zadnju ikonicu. Za nepovratno uklanjanje vesti i fotografije kliknite na predzadnju ikonicu u dotičnom redu.' style='height: 28px;')
      table.table.table-hover
        != messages('message', locals)
        thead.tableheader
            tr(align='center')
                th NASLOV
                th SADRŽAJ
                th DATUM
                th VIDLJIVO
                th 
                th 
            tbody
              for val in helps
                if val.arhiv == 1
                  tr(align='center' style='color: red;')
                    td #{val.hint}
                    td #{val.descript.substr(1, 100)} ...
                    td #{val.datum}
                    td NE
                    td
                      a(data-toggle='tooltip', title='Briši')
                        img.delete(src='../images/icons/delete.png' height='15px' onclick="deleteVesti('#{val.hint}')")
                    td
                      a.arhiv(data-toggle='tooltip', title='Vidljivo / Nevidljivo')
                        img.arhiv(src='../images/icons/archive.png' height='15px' onclick="archiveVesti('#{val.hint}')")
                else  
                  tr(align='center')
                    td #{val.hint}
                    td #{val.descript.substr(1, 100)} ...
                    td #{val.datum}
                    td DA
                    td
                      a(data-toggle='tooltip', title='Briši')
                        img.delete(src='../images/icons/delete.png' height='15px' onclick="deleteVesti('#{val.hint}')")
                    td
                      a.arhiv(data-toggle='tooltip', title='Vidljivo / Nevidljivo')
                        img.arhiv(src='../images/icons/archive.png' height='15px' onclick="archiveVesti('#{val.hint}')")