extends layout

block content
  body#page-top(data-target='.navbar-fixed-top')
    // Navigation
    nav#menu.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand.page-scroll(href='/knjigovodja/index', , data-toggle='tooltip', title='Home') 
            img(src='../images/vodovod_logo.png' height='27px' style='margin-top: -2px;')
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/knjigovodja/dokumenti') Dokumenti
            .dropdown
              li.dropli.active(onclick='myFunction()') Vesti
                #myDropdown.dropdown-content
                  a.active(href='/knjigovodja/vesti') Objava
                  a(href='/knjigovodja/vestiBrisanje') Sakrivanje i brisanje       
            li
              a(href='/knjigovodja/index') Blagajna
            li#dropmenu.dropdown
                img.avatarIcon(src='../images/icons/avatar_1.jpg')
                .dropdown-content
                  a(href='#' style="pointer-events: none;") #{naziv}
                  a(href='/odjava') Odjava
    .container(style='margin-top: 8em; margin-bottom: 4em;')
      .card.person-card
        .card-body
          .row
            .col-md
              .card(style='margin-top: -4%; margin-left: 25%; margin-right: 25%; font-size: 15px; padding-bottom: 2%; margin-bottom: 1%;')
                .card-body
                  img.avatarIcon(src='../images/icons/note.png' style='margin-top: -15px; height: 40px;')
                  h2.card-title Objava na sajtu 
                  img.infoIcon(src='../images/icons/info.png' title='Za objavu vesti na sajtu unesite naslov, datum objave, izaberite fotografiju (jpg), napišite sadržaj i kliknite na dugme pošalji.' style='margin-top: -10px; height: 28px;')
                  br
                  br
                  != messages('message', locals)
                   form(method='POST', action='/knjigovodja/vesti/saveVesti', id="uploadForm2", enctype="multipart/form-data")
                    .form-group(style='margin-top: 3%;')
                        label.col-form-label Naslov
                        input.naslov.form-control(type='text', placeholder='Naslov', name='naslov', maxlength='150', style='font-size: 15px;')
                    .form-group(style='margin-top: 3%;')
                        label.col-form-label Datum
                        input.datum.form-control(type='text', placeholder='Datum', name='datum', maxlength='10', style='font-size: 15px;', value=datum)
                    .form-group(style='margin-top: 3%;')
                            label.col-form-label Izaberite sliku (jpg): 
                            input.vestiSlika(type='file', name='vestiSlika' style='margin-left: 2%;')
                    .form-group(style='margin-top: 3%;')
                        label.col-form-label Sadržaj
                        textarea.sadrzaj.form-control(name='sadrzaj', placeholder='Tekst', rows='8', cols='50', style='font-size: 15px;')    
                        button.btn.btn-info.btn-lg.btn-block(type='submit' style='margin-top: 8%; margin-left: 30%; width: 40%; font-size: 14px;')
                            font(size='2.5') Pošalji