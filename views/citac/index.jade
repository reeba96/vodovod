extends layout

block content
  body#page-top(data-target='.navbar-fixed-top')
    // Navigation
    nav#menu.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand.page-scroll(href='/citac/index') 
            img(src='../images/vodovod_logo.png' height='27px' style='margin-top: -2px;')
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              .dropdown
                img.avatarIcon(src='../images/icons/avatar_1.jpg')
                .dropdown-content
                  a(href='#' style="pointer-events: none;") 
                    font(size='2') #{naziv}
                  a(href='/odjava') 
                    font(size='2') Odjava
  .container    
    .section-title(style='margin-top: 10em;')
      .row
        .col-md-4
        .col-md-2
          select.mesto.custom-select(style='width: 100%; height: 100%; font-size: 14px;')
            option BEZDAN
            option BACKI BREG
            option KOLUT
            option BAČKI MONOŠTOR
        .col-md-2
            input.ulica.form-control(type='text', name='ulica', placeholder='Ulica', maxlength='40', style='width: 100%; font-size: 15px;')
        .col-md-2
            input.naziv.form-control(type='text', name='naziv', placeholder='Naziv', maxlength='40', style='width: 100%; font-size: 15px;')
        .col-md-2
          button.button.btn.btn-primary.btn-lg.btn-block(type='submit', style='width: 100%;')
            font(size='2.5') Traži
    .cTable(style='display: none;')
      table#citacTable.table.table.hover
        thead.tableheader
          tr
            th.tsifra
            th.tnaziv     
            th.tadresa
            th.tmesto 
            th.ttelefon 
            th.tstanje
          tbody#tableBody
    .pages(style='align: center;')