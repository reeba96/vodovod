extends layout

block content
  body#page-top(data-target='.navbar-fixed-top')
    link(rel='stylesheet', href='https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css')
    nav#menu.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          a.navbar-brand.page-scroll(href='/admin/poruke', , data-toggle='tooltip', title='Home') 
            img(src='../images/vodovod_logo.png' height='27px' style='margin-top: -2px;')
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            if sifra == 999100001
              li
                a(href='/admin/backup') Backup
              li
                a.active(href='/admin/poruke') Poruke
            li
              a(href='/admin/index') Komitenti
            li
              a(href='/admin/nalsta') Nalog Stavke
            li
              a(href='/admin/nsnalsta') Neproknjižene Stavke
            li
              .dropdown
                img.avatarIcon(src='../images/icons/avatar_1.jpg')
                .dropdown-content
                  a(href='#' style="pointer-events: none;") #{naziv}
                  a(href='/odjava') Odjava
    .container
      .section-title(style='margin-top: 7em; margin-bottom: 2em;')
        h2 Poruke
        button#addButton.primary(type='button', style='margin-left: 10px; margin-top: -7px; font-size: 15px;') +
        
      table.table.table-hover
        != messages('message', locals)
        thead.tableheader
            tr
                th LANG_ID
                th HELP_ID
                th HINT
                th DESCRIPTION
                th
            tbody
                for val in helps
                  tr
                    td #{val.lang_id}
                    td #{val.help_id}
                    td #{val.hint}
                    td #{val.descript}
                    td(align='center')
                      a(href='/admin/poruke/delete/'+'#{val.hint}', data-toggle='tooltip', title='Briši')
                        img(src='../images/icons/delete.png' height='15px')