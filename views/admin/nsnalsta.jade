extends layout

block content
  body#page-top(data-target='.navbar-fixed-top')
    link(rel='stylesheet', href='https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css')
    nav#menu.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          a.navbar-brand.page-scroll(href='/admin/poruke', , data-toggle='tooltip', title='Home') 
            img(src='../images/vodovod_logo.png' height='27px' style='margin-top: -2px;')
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            if sifra == 999100001
              li
                a(href='/admin/backup') Backup
              li
                a(href='/admin/poruke') Poruke
            li
              a(href='/admin/index') Komitenti
            li
              a(href='/admin/nalsta') Nalog Stavke
            li
              a.active(href='/admin/nsnalsta') Neproknjižene Stavke
            li
              .dropdown
                img.avatarIcon(src='../images/icons/avatar_1.jpg')
                .dropdown-content
                  a(href='#' style="pointer-events: none;") #{naziv}
                  a(href='/odjava') Odjava
    .container
      .section-title(style='margin-top: 7em; margin-bottom: 2em;')
        h2 Neproknjižene stavke
      table.table.table-hover(style='width: 100%;')
        != messages('message', locals)
        thead.tableheader
          tr
            th Vrsta
            th Konto
            th Račun
            th Datum
            th Valuta
            th Duguje
            th Potražuje
            th Saldo
            th Cena
            th Trobračuna
            th PDVOpšta
            th PDVPosebna
            th DatČitač
            th ŠifČitač
          tbody
              for val in nsnalstas
                  tr
                    td #{val.vrsta}
                    td #{val.konto}
                    td #{val.racun}
                    td #{val.datum}
                    td #{val.valuta}
                    td(align="right") #{val.duguje}
                    td(align="right") #{val.potrazuje}
                    td(align="right") #{val.saldo}
                    td(align="right") #{val.cena}
                    td(align="right") #{val.trobracuna}
                    td(align="right") #{val.pdvopsta}
                    td(align="right") #{val.pdvposebna}
                    td #{val.datcitac}
                    td #{val.sifcitac}
